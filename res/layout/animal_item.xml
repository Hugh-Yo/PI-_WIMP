<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/animal_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical">



        <ImageView
            android:id="@+id/animal_pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_launcher_foreground"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/animal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="AnimalName"/>

            <TextView
                android:id="@+id/animal_GPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/animal_name"
                android:textColor="@color/black"
                android:text="AnimalGPS"/>

            <TextView
                android:id="@+id/animal_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/animal_GPS"
                android:textColor="@color/black"
                android:text="AnimalBattery"/>

            <TextView
                android:id="@+id/animal_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/animal_battery"
                android:textColor="@color/black"
                android:text="AnimalService"  />

            <TextView
                android:id="@+id/animal_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/animal_service"
                android:textColor="@color/black"
                android:text="AnimalActive"  />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>