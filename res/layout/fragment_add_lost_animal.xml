<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addLostAnimalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLostAnimal">

    <LinearLayout
        android:id="@+id/declare_loss_zone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/careleum_blue"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/declare_loss_yours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Declare loss of one of your animals"
            android:textSize="23sp" />

        <ListView
            android:id="@+id/loose_animal_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:dividerHeight="3dp" />

        <Button
            android:id="@+id/declare_other_loss_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Enter information about lost animal"
            app:backgroundTint="@color/teal_700" />
    </LinearLayout>
</FrameLayout>