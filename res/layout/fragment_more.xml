<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".More"
    android:id="@+id/moreLayout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/more_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/teal_custom"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/azurin_blue"/>

    <LinearLayout
        android:id="@+id/person_checkbox_zone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/smalt_blue"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/midnight_blue"
            android:layout_margin="8dp"
            >
            <CheckBox
                android:id="@+id/check_helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be a helper !"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/check_notifs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receive notifications"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/check_reports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send reports for improval"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>