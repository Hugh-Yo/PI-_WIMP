<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPerson"
    android:id="@+id/addPersonLayout"
    android:layout_centerHorizontal="true"
    android:background="@color/smalt_blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="EDIT/ADD PROFILE"
                android:textColor="@color/azurin_blue"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/person_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_profile"/>

            <EditText
                android:id="@+id/edit_person_fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Firstname" />

            <EditText
                android:id="@+id/edit_person_lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Lastname"
                />

            <EditText
                android:id="@+id/edit_person_phonenb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Phone number"
                />


            <EditText
                android:id="@+id/edit_person_mailadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Email address"
                />

            <TextView
                android:id="@+id/person_header_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Address"
                android:textColor="@color/azurin_blue"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/edit_person_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Street and number"
                />

            <EditText
                android:id="@+id/edit_person_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="City"
                />

            <EditText
                android:id="@+id/edit_person_postcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Post Code"
                />

            <EditText
                android:id="@+id/edit_person_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="Country"
                />

            <Button
                android:id="@+id/person_confAddBttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/teal_700"
                android:text="Edit/Add Profile"
                app:backgroundTint="@color/teal_700" />"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>