<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animalsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maya_blue"
    android:orientation="vertical"
    tools:context=".Animals"    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/teal_custom"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/azurin_blue"
        app:menu="@menu/animals_top_menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize">

        <ListView
            android:id="@+id/animals_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="3dp"
            android:layout_margin="5dp"/>

        <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/new_animal_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:background="@color/teal_700"
            android:src="@drawable/ic_plus"
            app:backgroundTint="@color/teal_700" />-->
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>